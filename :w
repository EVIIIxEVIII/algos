#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t; cin >> t;
    while (t--) {
        int x, n, m;
        cin >> x >> n >> m;

        int ns = n, ms = m;
        int minN = x;
        for (int i = 0; i < (n+m); ++i) {
            bool even = minN % 2 == 0;
            int newN = minN;

            if (even) {
                if (m > 0) {
                    minN /= 2;
                    ns--;
                } else {
                    minN = (minN + 1) / 2;
                }
            } else {
                if (m > 0) {
                    minN /= (minN + 1) / 2;
                } else {
                    minN /= 2;
                }
            }


        }

    }
    return 0;
}
