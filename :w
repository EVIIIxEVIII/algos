#include <algorithm>
#include <vector>
#include <iostream>


using namespace std;

int main() {
    int tt; cin >> tt;

    while (tt--) {
        int n; cin >> n;
        vector<int> a(n);

        for (int i = 0; i < n; ++i) {
            cin >> a[i];
        }

        sort(a.begin(), a.end());
        int ans = 0;
        int sumAns = 0;

        for (int i = 0; i < n; ++i) {
            sumAns += a[i];
        }

        int prev = a[0];
        int prefixSum = a[0];
        int mex = 0;
        int idx = 0;

        if (a[0] == 0) {
            for (int i = 1; i < n; ++i) {
                if (prev == a[i] + 1) {
                    prev = a[i] + 1;
                } else if (prev == a[i]) {}
                else {
                    mex = a[i];
                    idx = i;
                    break;
                }
                prefixSum += a[i];
            }
        }

        if (prefixSum > mex) {
            cout << sumAns << '\n';
        } else {
            cout << sumAns - prefixSum + mex << '\n';
        }

    }

    return 0;
}
