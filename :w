#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t; cin >> t;
    while (t--) {
        int n; cin >> n;

        vector<int> a(n);

        for (int i = 0; i < n; ++i) {
            cin >> a[i];
        }

        vector<int> ct(n+1, 0);
        vector<int> dp(n+1, 0);

        vector<vector<int>> pos(n+1);

        for (int i = 0; i < n; ++i) {
            ct[a[i]]++;

            int prevDp = i-1 >= 0 ? dp[i-1] : 0;

            if (ct[a[i]] % a[i] == 0) {
                int prevVal = i - a[i] - 1 >= 0 ? dp[i - a[i] - 1] : 0;
                dp[i] = max(prevDp, prevVal + a[i]);
            } else {
                dp[i] = prevDp;
            }
       }

       cout << dp[n-1] << '\n';
    }
    return 0;
}
