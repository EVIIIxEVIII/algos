#include <bits/stdc++.h>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int tt; cin >> tt;

    while (tt--) {
        int n; cin >> n;
        int k; cin >> k;

        vector<int> a(n);

        for (int i = 0; i < n; ++i) {
            cin >> a[i];
        }

        set<int> wn;
        unordered_map<int, int> map;

        for (int i = 0; i < n; ++i) {
            map[a[i]]++;
            if (a[i] % k != 0) {
                wn.insert(a[i]);
            }
        }

        int ans = 0;
        for (int i = 0; i < n; ++i) {
            auto localMap = map;
            auto localWn = wn;

            for (int j = i; j < n; ++j) {
                auto &cnt = map[a[i]];

                if (cnt % k == 0 && cnt >= k) {
                    wn.erase(map[a[i]]);
                } else if (cnt % k != 0) {
                    wn.insert(a[i]);
                }

                if (wn.empty()) ans++;
                --cnt;
            }
        }


    }

    return 0;
}
